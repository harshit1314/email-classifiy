# Environment Variables for Docker Deployment
# Copy this file to .env and fill in your values

# MongoDB Configuration
MONGO_URI=mongodb://mongodb:27017
MONGO_DB=ai_email
MONGO_COLLECTION=classifications
MONGO_INGEST_COLLECTION=ingested_emails
MONGO_RETENTION_DAYS=0

# Backend Configuration
DATABASE_PATH=/app/data/email_classifications.db
PORT=8000
LOG_LEVEL=INFO

# Admin Account Configuration
# Default admin account is created automatically on first run
# Change these credentials for security in production
ADMIN_EMAIL=admin@emailclassifier.com
ADMIN_PASSWORD=admin123

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Gmail Configuration (Optional - can be configured via UI)
# GMAIL_CLIENT_ID=your_gmail_client_id
# GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Outlook Configuration (Optional - can be configured via UI)
# OUTLOOK_CLIENT_ID=your_outlook_client_id
# OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
# OUTLOOK_TENANT_ID=common

# Application Settings
AUTO_CLASSIFY_ON_INGEST=true
CLASSIFY_ASYNC=false
